<% if @user.photo %>
  <%= cl_image_tag @user.photo.key, crop: :fill, :class => "img_preview" %>
<% end %>
<%= link_to "You Have a new pet click here !", new_dog_path, class: "btn btn-primary w-100 my-5" %>
<p><i class="fa-solid fa-file-signature"></i> : <%= @user.first_name %></p>
<p><i class="fa-solid fa-file-signature"></i> : <%= @user.last_name %></p>
<p><i class="fa-regular fa-envelope"></i> : <%= @user.email %></p>
<p><i class="fa-solid fa-map-location-dot"></i> : <%= @user.address %></p>

<h2>My reviews <i class="fa-regular fa-comments"></i></h2>
<hr>
<% @dogs.each do |dog| %>
  <% dog.comments.each do |comment| %>
    <p><i class="fa-regular fa-comment-dots"></i> : <%= comment.content %></p>
<% end %>
<% end %>
