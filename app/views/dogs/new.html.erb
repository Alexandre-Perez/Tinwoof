<h1>new</h1>

<%= simple_form_for(@dog) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :gender, as: :select, collection: ["Male", "Female"] %>
    <%= f.input :age %>
    <%= f.input :race %>
    <%= f.input :height %>
    <%= f.input :description %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.button :submit %>
  </div>

<% end %>


<h1>My Dogs :</h1>

<% @dogs.each do |dog| %>
  <% if dog.user_id == current_user.id %>
    <ul><li><%= link_to dog.name, edit_dog_path(dog) %></li></ul>
  <% end %>
<% end %>
