<%= form_with url: dogs_path, method: :get, class: "d-flex" do %>
  <%= select_tag :query, options_for_select(["Select gender", "Male", "Female"])  %>

  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<% @dogs.each do |dog| %>
  <%= link_to dog_path(dog), class: "link-dog" do %>
    <div class="card-trip">
       <%= cl_image_tag dog.photos.first.key, crop: :fill %>
        <div class="card-trip-infos">
          <div>
            <h2><%= dog.name  %></h2>

            <% @users.each do |user| %>
                <tr>
                <td><%= user.first_name %></td>
                <td><%= user.last_seen_at.nil? ? "Never sign" : time_ago_in_words(user.last_seen_at)  %></td>
                </tr>
            <% end %>

            <% @online_users.each do |user| %>
              <%= user.first_name %>
              <p>Online</p>
            <% end %>
          </div>

          <h2 class="card-trip-pricing">"UserName"</h2>
          <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
        </div>
    </div>
    <% end %>
  <% end %>
