<style>
body{
  background: #FFF5E4;
}
.wrapper {
  width: 85%;
  margin: 0 auto;
  margin-bottom: 85px;
 }
</style>



<div class="my-3">
<div class="d-flex justify-content-around">
<%= form_with url: dogs_path, method: :get, class: "d-flex justify-content-around my-2" do %>
  <%= select_tag :query, options_for_select(["Select gender", "Male", "Female"]), class:"soupere"  %>
    <%= submit_tag "Search", class: "btn btn-dark btn-outline-white mx-4" %>
  <% end %>
  </div>

  <div class="wrapper">
    <% @dogs.each do |dog| %>
      <%= link_to dog_path(dog), class: "link-dog" do %>
      <div class="card-group">
      <div class="card my-3">
          <% if dog.photos.length != 0 %>
            <%= cl_image_tag dog.photos.first.key, crop: :fill %>
          <% else %>
            <p>no picture</p>
          <% end %>
            <div class="card-trip-infos">
              <div>
                <h2><%= dog.name  %></h2>
                <p><i class="fa-solid fa-location-arrow"></i> <%= dog.address %></p>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      <% end %>
  </div>
</div>
