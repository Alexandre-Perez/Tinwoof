  </span>
  </div>
<br>
<br>

<div class="wrapperp">
<div class="scrolling-wrapper">
<% @comments.each do |comment| %>
<% if @dog.id == comment.dog_id %>
<div class="card"><p class="supercomment">"<%= comment.content %>"</p></div>
<% end %>
<% end %>
</div>




<br>
<h3 class="d-flex justify-content-center my-3">Leave a review to  <em>  <%= @dog.name %> </em> </h3>

<%= simple_form_for([@dog, @comment]) do |f| %>
  <div class="form-inputs">
    <%= f.input :content, label: false, placeholder: "Say something to #{@dog.name} ...", class: "textzone" %>
    <%= f.button :submit, class: "btn w-80 " %>
  </div>
<% end %>

