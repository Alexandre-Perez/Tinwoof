
<div class="photocontainer">
<% if @dog.photos.length != 0 %>
  <%= cl_image_tag @dog.photos.first.key, :class => "photoprofile", crop: :fill %>

  <% else %>
          <p>no picture available for now ...</p>
  <% end %>
  <%= link_to chatrooms_path, class: "messagelink" do %>
        <% end %>
   <p class="supertitle"><%= @dog.name %>, <%= @dog.age %> yo</p>

  <p class="details1">
    <% if @dog.gender == "female" %>
      <i class="fa-solid fa-venus"></i>
    <% else %>
      <i class="fa-solid fa-mars"></i>
    <% end %>
    | <%= @dog.race %>
    | <%= @dog.height %></p>
  <%= link_to "Chat with #{@dog.name}", chatroom_path, :class => "bouton-message" %>
</div>

<div class="containerd d-flex justify-content-center my-4">
<p class="dogdescription "><%= @dog.description %></p>
</div>

<div class="d-flex justify-content-around superp">
