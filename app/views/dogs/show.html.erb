<h1>show#dogs</h1>

<%= cl_image_tag @dog.photos.first.key, crop: :fill %>
<p><%= @dog.name %></p>
<%= simple_form_for([@dog, @comment]) do |f| %>
  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.button :submit %>
  </div>
<% end %>
<ul><li>
<% @comments.each do |comment| %>
<% if comment.dog_id == @dog.id %>
<%= comment.content %>
<% end %>
<% end %>
</li></ul>


