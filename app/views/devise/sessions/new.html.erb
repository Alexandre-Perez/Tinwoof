
<div class="background-img">
  <h2 style="text-align: center;font-weight: bold; padding: 10%;">Bienvenue </h2>
    <div class="homepage">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <div class="form-inputs" style="text-align: center; font-weight: bold; margin-top: 80%;">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class:"input-sign" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class:"input-sign" } %>
          <div class="form-check">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        </div>

        <div class="d-flex buttons-sign">
          <div class="form-actions">
            <%= f.button :submit, "Log in" %>
          </div>

          <%= link_to "Sign up", new_registration_path(resource_name), class:"signup-button" %><br />
        </div>


      <% end %>
    </div>
  <%= render "devise/shared/links" %>
</div>
